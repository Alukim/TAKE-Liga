package models;

import java.util.Random;

public class Customer {
	float petrolOrder;
	boolean doesHePaid;
	
	public Customer(float petrolOrder){
		this.petrolOrder = petrolOrder;
	}
	
	float getOrder(){
		return petrolOrder;
	}

	public bool payForOrder() {
		Random random = new Random();	
		if(random.nextInt(1000) == 99){
			doesHePaid = false;
			System.out.println("Petrol stolen by client");
		}
		else{
			doesHePaid = true;	
			System.out.println("Client paid for the petrol");
		}					
	}
}
