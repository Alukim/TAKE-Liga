package models;

import java.util.Random;

public class Customer {
	float petrolOrder;
	boolean doesHePaid;
	
	public Customer(float petrolOrder){
		this.petrolOrder = petrolOrder;
	}
	
	float getOrder(){
		return petrolOrder;
	}

	public void payForOrder() {
		Random random = new Random();	
		if(random.nextInt(100) == 99){
			doesHePaid = false;
			System.out.println("Petrol stolen by client");
		}
		else
			doesHePaid = true;			
	}
}
